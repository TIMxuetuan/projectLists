/**index.wxss**/
.container{
  background-color: #f2f2f2;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}

.menu{
  display: flex;
  margin-top: 40rpx;
}
.menu__item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.menu__item [class^="icon"]{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #07c160;
  color: #fff;
  font-size: 56rpx;
  border-radius: 10rpx;
  margin-bottom: 8rpx;
}

.panel{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx #ccc;
}
.panel .left{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(100, 91, 91);
}
.panel .left [class^="icon"]{
  margin-right: 10rpx;
  color: rgb(100, 91, 91);
}
.panel .right{
  display: flex;
  align-items: center;
  font-size: 28rpx;
}