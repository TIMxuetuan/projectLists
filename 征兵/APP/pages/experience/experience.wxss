.container {
  padding: 20rpx;
}
.border-list {
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-top: 20rpx;
}
.border-list .item {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  border-bottom: #ddd solid 1px;
}
.label {
  width: 150rpx;
  font-size: 28rpx;
}
.border-list .input-box{
  flex:1;
}
.border-list .input-box input{
  text-align:right;
  font-size:13px;
  width:100%;
  height:80rpx;
  line-height:80rpx;
}
.bt{width:100%; height:100rpx;line-height:100rpx;}
.picker-text{
  display: inline-block;
  height:73rpx;
  width:80rpx;
  background:#ddd;
  font-size:25rpx;
  text-align:center;
  line-height:73rpx;
  margin-left:20rpx;
}
.picker-p{
  margin-left:150rpx;
  display: flex;
  align-items: center;
  justify-content: right;
  flex:1;
}