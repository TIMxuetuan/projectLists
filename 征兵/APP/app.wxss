/**app.wxss**/
@import "./iconfont/iconfont.wxss";
page{
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  font-family: Arial, Helvetica, sans-serif;
  overflow-x: hidden;
}

.flex{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* .container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}  */
.container{height:100%;}

.bt{color: #fff;width: 550rpx;height: 80rpx;line-height: 80rpx;background: #2e87cd;border-radius:5rpx;margin-top: 40rpx;}
  
.item-has-arrow-right{ display: flex;}
.item-has-arrow-right::after{
  font-family:"iconfont" !important;
  content: "\e622"; color: #2e87cd;
  flex: 1; text-align: right;
  margin-top: -1px;
}

/* 表单 */
.bl-form .form-item{ margin-bottom: 24rpx; border-bottom: #ddd solid 1px; color: #999; font-size: 34rpx;}
.bl-form input,.bl-form textarea{font-size:85%; display: block;box-sizing: border-box;}
textarea{ width: 100%; display: block; box-sizing: border-box;}
.bl-form .label{ width: 140rpx; text-align: right;}
.bl-form textarea{ padding: 16rpx; min-height: 200rpx;font-size:82%; line-height: 1.4;}
/*label和input两端分布的表单*/
.form-ends .form-item { display: flex;align-items: center;}
.form-ends .form-item .label{font-size: 28rpx;height: 80rpx; line-height: 80rpx; text-align: left; color: #666;}
.form-ends .form-item .input-box{ flex: 1;}
.form-ends .form-item input{ width: 100%; color: #333;}


.bl-panel{
  padding: 30rpx; box-sizing: border-box;
  background:#fff; border-radius: 10rpx; margin-bottom: 20rpx;
  color: #333333;
}
.panel-title{ text-align: center; font-size: 36rpx; font-weight:400;border-bottom:#ddd solid 1px; padding-bottom: 18rpx; margin-bottom: 30rpx; color:#2e87cd}

.page-body{ margin-top: 24rpx; line-height: 1.6; font-size:32rpx;}


.no-data{ padding:60rpx 0; color: #999; text-align: center; font-size: 30rpx;}

.from-bt{
    width:300rpx;
    height:80rpx;
    line-height: 80rpx;
    font-size:14px;
    color:#2e87cd;
    border:1px solid #2e87cd;
    margin-right:10rpx;
}

/* loading*/
.page-loading{ 
  position: absolute; left: 0; top: 0; width: 100%; height: 100vh; z-index: 99999;
  display: flex;
  align-items:center;
  justify-content:center;
  text-align: center;
}
.page-loading-image{ width: 300rpx; height: 111rpx;}
.page-loading-text{ font-size: 30rpx; margin-top:100rpx; color: #999;}
.page-loading-image-loading{ width: 80rpx; height: 80rpx; margin-bottom: 26rpx;background:#fff;}
.page-loading{ position: absolute; left: 0; right: 0; bottom: 0; top:0; background: #fff; z-index: 9999;}

li-ends-list{ font-size:28rpx;}
.li-ends-list .li{
  height: 86rpx;
  border-bottom: #eee solid 1px; padding:0 20rpx;
  display: flex; align-items: center;
 }
 .panel-title .end .end-two{
    padding:20rpx;
 }
 .panel-title .end .end-one{
