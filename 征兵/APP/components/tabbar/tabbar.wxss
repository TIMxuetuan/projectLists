/* components/tabbar/tabbar.wxss */

.has-topbar{padding-top: 100rpx;}

.tabbar-nav{ width:100%; height:84rpx;border-bottom: #eee solid 1px; padding-top: 10rpx;
 position: fixed; left: 0; right: 0; top: 0; z-index: 100; background: #fff;}
.tabbar-nav-inner{ float: left; white-space:nowrap;}
.tabbar-nav .item{ display: inline-block; font-size: 34rpx; line-height: 78rpx;
 height: 78rpx;margin: 0 10rpx; border-bottom: #ffffff solid 6rpx;}
.tabbar-nav .item.active{ border-bottom: #de3031 solid 6rpx; color:#de3031;}
.tabbar-nav .navigator{ padding: 0 14rpx; }

