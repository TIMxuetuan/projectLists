page {
  width: 100%;
}
.cuIcon-back{
  color: #ffffff;
}

.oneViewStyle{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.header-bg{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.container {
  min-height: 100vh;
  background-size: cover;
  height: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  width: 100vw;
  overflow: hidden;
}

.cu-custom .cu-bar{
  background-color: #EE0A24;
}

.background-imgs {
  width: 100%;
  height: 100%;
  position: fixed;
  overflow: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*登录注册表单*/
.containner-from{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 300rpx auto 0;
  width: 670rpx;
  background-color: rgba(255, 255,255,.7);
  padding: 40rpx 0 0;
  border-radius: 5px;
}

.fromTitle{
  width: 670rpx;
  height: 80rpx;
  background-color: #F97677;
  font-size: 18px;
  color: #ffffff;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
}

.page-section{
  width: 590rpx;
  margin-bottom: 60rpx;
}

.page-section  .van-cell{
  padding: 8px 16px;
}

.customBtn{
  width: 600rpx;
  background-color: #E7222C;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  opacity: 1;
}

.forgetPassword{
  display: flex;
  justify-content: space-between;
}

.forgetPassword .rightContent{
  background-color: #ffffff;
  color: #E7222C;
  font-size: 14px;
  padding: 10rpx 20rpx;
  margin: 20rpx 0 40rpx;
  opacity: 1;
}