/* pages/paydues/paydues.wxss */
.container {
  min-height: 100vh;
  background-size: cover;
  height: 100%;
  box-sizing: border-box;
}
.cuIcon-back{
  color: #ffffff;
}
.cu-bar .action:first-child>text[class*="cuIcon-"]{
  margin-right: 0;
}

/*轮博样式*/
.swiperFather {
  margin: 100rpx auto 150rpx;
}

swiper {
  width: 670rpx;
  height: 400rpx;
  margin: 0 auto;
}

image {
  width: 670rpx;
  height: 400rpx;
}

/*自定义指示点样式*/
.swp-dot {
  display: flex;
  justify-content: center;
  flex: 1;
  margin-top: 18rpx;
}

.m-r-8 {
  margin-right: 16rpx;
}

.square-12 {
  width: 40rpx;
  height: 10rpx;
  background-color: #000000;
  border-radius: 6rpx;
  transition: width 0.2s linear;
}

.active {
  background-color: red;
  width: 60rpx;
  transition: width 0.2s linear;
}
/*登录注册表单*/
.containner-from {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.containner-from .margin-right {
  margin: 0 80rpx 0 0;
}

.containner-from button {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #E7222C;
  color: #ffffff;
  font-size: 14px;
}

.page-section {
  width: 700rpx;
}