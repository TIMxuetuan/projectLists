}

.oneViewStyle{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.header-bg{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.cuIcon-back{
  color: #ffffff;
}

.cu-bar .action:first-child>text[class*="cuIcon-"]{
  margin-right: 0;
}

.registerHeader{
  background-color: #E7222C;
}

.container {
  min-height: 100vh;
  background-size: cover;
  height: 100%;
